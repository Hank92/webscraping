    <div class="page-header text-center">
        <h1><span class="fa fa-anchor"></span> 공기대</h1>
    </div>

   
        <!-- LOCAL INFORMATION -->
       <% for( var i = postModels.length-1; i > -1 ; i-- ) { %>

            <div class = "row">
            <div class="col-sm-6 col-md-4">

            <div class = "thumbnail">
         <img src = "<%= postModels[i].image_url %>" alt = "이미지 로딩중.." class="img-responsive>
